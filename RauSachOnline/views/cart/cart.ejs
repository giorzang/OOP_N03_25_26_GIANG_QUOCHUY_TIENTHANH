<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container" style="margin-top: 100px;">
        <h2 class="mb-4">Giỏ hàng của bạn</h2>

        <% if (!products || products.length === 0) { %>
            <div class="alert alert-info" role="alert">
                Giỏ hàng của bạn đang trống. <a href="/">Mua sắm ngay!</a>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Sản phẩm</th>
                                        <th scope="col">Giá</th>
                                        <th scope="col">Số lượng</th>
                                        <th scope="col">Tổng</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let p of products) { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= p.imageUrl %>" alt="<%= p.name %>" style="width: 50px; height: 50px; object-fit: cover; margin-right: 15px;">
                                                    <strong><%= p.name %></strong>
                                                </div>
                                            </td>
                                            <td><%= p.price.toLocaleString('vi-VN') %> VND</td>
                                            <td><%= p.quantity %></td>
                                            <td><%= (p.price * p.quantity).toLocaleString('vi-VN') %> VND</td>
                                            <td>
                                                <form action="/cart/delete-from-cart" method="POST">
                                                    <input type="hidden" name="productId" value="<%= p.id %>">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-3">Tóm tắt đơn hàng</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <strong><%= totalPrice.toLocaleString('vi-VN') %> VND</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Phí giao hàng:</span>
                                <strong>Miễn phí</strong>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold fs-5">
                                <span>Tổng cộng:</span>
                                <span><%= totalPrice.toLocaleString('vi-VN') %> VND</span>
                            </div>
                            
                            <hr>
                            
                            <form action="/orders" method="POST" class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Tiến hành Đặt hàng</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>