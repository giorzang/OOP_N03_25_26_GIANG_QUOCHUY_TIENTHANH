<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container" style="margin-top: 100px;">
        <h2 class="mb-4">Lịch sử Đơn hàng</h2>

        <% if (!orders || orders.length === 0) { %>
            <div class="alert alert-info" role="alert">
                Bạn chưa có đơn hàng nào. <a href="/">Mua sắm ngay!</a>
            </div>
        <% } else { %>
            <div class="accordion" id="ordersAccordion">
                
                <% orders.forEach((order, index) => { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading<%= order.id %>">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                    data-bs-target="#collapse<%= order.id %>" aria-expanded="false" 
                                    aria-controls="collapse<%= order.id %>">
                                <div class="d-flex justify-content-between w-100 me-3">
                                    <span>Đơn hàng #<%= order.id %></span>
                                    <span class="text-muted me-2">Ngày: <%= new Date(order.created_at).toLocaleDateString('vi-VN') %></span>
                                    <span class="text-danger fw-bold"><%= order.total_price.toLocaleString('vi-VN') %> VND</span>
                                </div>
                            </button>
                        </h2>
                        <div id="collapse<%= order.id %>" class="accordion-collapse collapse" 
                             aria-labelledby="heading<%= order.id %>" data-bs-parent="#ordersAccordion">
                            
                            <div class="accordion-body">
                                <h5>Chi tiết đơn hàng</h5>
                                <ul class="list-group">
                                    <% order.items.forEach(item => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong><%= item.product_name %></strong>
                                                <small class="text-muted d-block">
                                                    Giá: <%= item.product_price.toLocaleString('vi-VN') %> VND
                                                </small>
                                            </div>
                                            <span class="badge bg-primary rounded-pill">
                                                Số lượng: <%= item.quantity %>
                                            </span>
                                        </li>
                                    <% }); %>
                                </ul>
                                <h6 class="mt-3">Giao đến:</h6>
                                <p class="mb-0"><%= order.shipping_address %></p>
                                <p class="mb-0"><%= order.shipping_phone %></p>
                            </div>

                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>