<%- include('../includes/head.ejs') %>
<body class="custom-bg"> 
<%- include('../includes/navigation.ejs') %>

<main>
    <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active" style="
                background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://picsum.photos/1600/600?random=1') center center / cover; 
                height: 450px; 
            "> 
                <div class="container h-100 d-flex align-items-center">
                    <div class="carousel-caption text-center w-75 mx-auto">
                        <h1 class="display-3 fw-bolder text-white animate__animated animate__fadeInDown" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.6);">
                            TƯƠI MỖI NGÀY, SẠCH TỪ TRANG TRẠI.
                        </h1>
                        <p class="lead text-light mb-5 fs-5 animate__animated animate__fadeInUp animate__delay-1s">
                            100% Hữu cơ, Chất lượng chuẩn VietGAP. Giao hàng tận nơi trong ngày.
                        </p>
                        <p class="animate__animated animate__zoomIn animate__delay-2s">
                            <a class="btn btn-lg btn-success fw-bold shadow-lg custom-btn-secondary py-3 px-5" href="/register" style="border-radius: 50px;">
                                <i class="fas fa-arrow-right me-2"></i> KHÁM PHÁ NGAY
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            </div>
    </div>

    <div class="album py-5" style="background-color: #f8f9fa;">
        <div class="container">
            <div class="text-center mb-5">
                <h3 class="fw-bolder text-success mb-3">
                    <i class="fas fa-seedling me-2"></i> SẢN PHẨM NỔI BẬT
                </h3>
                <hr class="w-25 mx-auto border-success border-2">
            </div>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                <% if (prods && prods.length > 0) { %>
                    <% for (let product of prods) { %>
                        <div class="col">
                            <div class="card professional-card shadow-sm border-0 h-100 overflow-hidden">
                                <div class="product-img-container" style="height: 200px; overflow: hidden;">
                                    <img 
                                        src="<%= product.image_url %>" 
                                        alt="<%= product.name %>" 
                                        class="card-img-top product-img" 
                                        style="object-fit: cover; width: 100%; height: 100%; transition: transform 0.3s ease-in-out;"
                                    >
                                </div>

                                <div class="card-body text-center d-flex flex-column justify-content-between p-3">
                                    <div>
                                        <h6 class="product-title fw-bolder text-dark mb-1"><%= product.name %></h6>
                                        <p class="card-text text-muted small mb-2 text-truncate"><%= product.description %></p>
                                        
                                        <span class="badge bg-danger rounded-pill fs-6 py-2 px-3 mb-3">
                                            <%= parseFloat(product.price).toLocaleString('vi-VN') %> VND
                                        </span>
                                        <p class="small text-secondary mb-3">Phân loại: <%= product.category_name %></p>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <form action="/cart/add-to-cart" method="POST">
                                            <input type="hidden" name="productId" value="<%= product.id %>">
                                            <button type="submit" class="btn btn-success btn-sm w-100 custom-btn-add-cart">
                                                <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info text-center" role="alert">
                            <i class="fas fa-info-circle me-2"></i> Không có sản phẩm nào để hiển thị.
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <section class="py-5 bg-light text-center">
        <div class="container">
            <h4 class="text-secondary mb-3">TẠI SAO CHỌN CHÚNG TÔI?</h4>
            <div class="row pt-3">
                <div class="col-md-4">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <p class="fw-bold">Nguồn gốc rõ ràng</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-shipping-fast fa-3x text-success mb-3"></i>
                    <p class="fw-bold">Giao hàng siêu tốc</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-hand-holding-heart fa-3x text-success mb-3"></i>
                    <p class="fw-bold">Hỗ trợ 24/7</p>
                </div>
            </div>
        </div>
    </section>

</main>

<footer class="container py-4 border-top">
    <p class="float-end mb-0"><a href="#" class="text-success">Trở lại đầu trang</a></p>
    <p class="mb-0 text-muted">
        &copy; 2025 Rau Sạch Online &middot;
        <a href="#" class="text-success">Quyền riêng tư</a> &middot;
        <a href="#" class="text-success">Điều khoản</a>
    </p>
</footer>

<%- include('../includes/end.ejs') %>