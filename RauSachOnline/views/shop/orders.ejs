<%- include('../includes/head.ejs') %>
<body class="custom-bg"> <%- include('../includes/navigation.ejs') %>

<main>
    <div class="container" style="margin-top: 50px; margin-bottom: 50px;">
        <h2 class="mb-5 text-success fw-bold">
            <i class="fas fa-history me-2"></i> Lịch sử Đơn hàng
        </h2>

        <% if (!orders || orders.length === 0) { %>
            <div class="alert alert-info" role="alert">
                Bạn chưa có đơn hàng nào. <a href="/" class="text-success fw-bold">Mua sắm ngay!</a>
            </div>
        <% } else { %>
            <div class="accordion orders-accordion" id="ordersAccordion">
                
                <% orders.forEach((order, index) => { %>
                    <div class="accordion-item order-item shadow-sm mb-3">
                        <h2 class="accordion-header" id="heading<%= order.id %>">
                            <button class="accordion-button collapsed order-header-button" type="button" data-bs-toggle="collapse" 
                                    data-bs-target="#collapse<%= order.id %>" aria-expanded="false" 
                                    aria-controls="collapse<%= order.id %>">
                                
                                <div class="d-flex justify-content-between w-100 align-items-center flex-wrap">
                                    
                                    <div class="d-flex align-items-center">
                                        <span class="order-id fw-bold me-3">
                                            <i class="fas fa-box-open me-1 text-primary"></i> Đơn hàng #<%= order.id %>
                                        </span>
                                        <span class="text-muted small">
                                            <i class="fas fa-calendar-alt me-1"></i> Ngày: <%= new Date(order.created_at).toLocaleDateString('vi-VN') %>
                                        </span>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <span class="text-danger fw-bold fs-5 me-3"><%= order.total_price.toLocaleString('vi-VN') %> VND</span>
                                        
                                        <span class="badge bg-success me-3">Đã giao</span> 
                                    </div>
                                    
                                </div>
                            </button>
                        </h2>
                        <div id="collapse<%= order.id %>" class="accordion-collapse collapse" 
                             aria-labelledby="heading<%= order.id %>" data-bs-parent="#ordersAccordion">
                            
                            <div class="accordion-body order-body p-4">
                                
                                <h5 class="text-success mb-3"><i class="fas fa-list-alt me-2"></i> Sản phẩm đã đặt</h5>
                                <div class="table-responsive">
                                    <table class="table table-sm table-borderless order-detail-table">
                                        <thead>
                                            <tr>
                                                <th>Sản phẩm</th>
                                                <th class="text-end">Giá</th>
                                                <th class="text-end">SL</th>
                                                <th class="text-end">Tổng cộng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% order.items.forEach(item => { %>
                                                <tr>
                                                    <td><strong><%= item.product_name %></strong></td>
                                                    <td class="text-end"><%= item.product_price.toLocaleString('vi-VN') %> VND</td>
                                                    <td class="text-end fw-bold text-success"><%= item.quantity %></td>
                                                    <td class="text-end fw-bold"><%= (item.product_price * item.quantity).toLocaleString('vi-VN') %> VND</td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>

                                <hr>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5 class="text-success mb-2"><i class="fas fa-truck me-2"></i> Thông tin giao hàng</h5>
                                        <p class="mb-0"><strong>Địa chỉ:</strong> <%= order.shipping_address %></p>
                                        <p class="mb-0"><strong>Điện thoại:</strong> <%= order.shipping_phone %></p>
                                    </div>
                                    <div class="col-md-6 text-md-end">
                                        <h5 class="text-success mb-2"><i class="fas fa-money-bill-wave me-2"></i> Thanh toán</h5>
                                        <p class="mb-0"><strong>Phương thức:</strong> Thanh toán khi nhận hàng (COD)</p>
                                        <p class="mb-0"><strong>Tổng tiền:</strong> <span class="text-danger fw-bold"><%= order.total_price.toLocaleString('vi-VN') %> VND</span></p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>
</body> 