<%- include('../includes/head.ejs') %>
<body class="custom-bg"> 
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
        <div class="card p-5 custom-login-card shadow-lg rounded-3" style="width: 100%; max-width: 480px;">
            <div class="card-body p-0">
                
                <div class="text-center mb-4">
                    <h2 class="text-success fw-bold mb-2">
                        <i class="fas fa-sign-in-alt me-2"></i> ĐĂNG NHẬP
                    </h2>
                    <p class="text-muted mb-0 small">
                        Vui lòng sử dụng tài khoản Quản trị viên hoặc Khách hàng.
                    </p>
                </div>

                <% if (errorMessage) { %>
                    <div class="alert alert-danger text-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i> <%= errorMessage %>
                    </div>
                <% } %>

                <form action="/login" method="POST" novalidate>
                    <div class="mb-3">
                        <label for="emailOrPhone" class="form-label">Địa chỉ Email</label>
                        <input 
                            type="text" 
                            class="form-control rounded-3" 
                            id="emailOrPhone" 
                            name="emailOrPhone" 
                            placeholder="Nhập Email của bạn"
                            required
                        >
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input 
                            type="password" 
                            class="form-control rounded-3" 
                            id="password" 
                            name="password" 
                            placeholder="Nhập Mật khẩu"
                            required
                        >
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-lg custom-btn-login">
                            <i class="fas fa-arrow-right me-2"></i> Đăng nhập
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3 pt-3 border-top">
                    <p class="mb-1 small">
                        Chưa có tài khoản? 
                        <a href="/register" class="text-success fw-bold text-decoration-none">Tạo tài khoản mới</a>
                    </p>
                    <p class="mb-0 small">
                        <a href="/reset-password" class="text-secondary text-decoration-none">Quên mật khẩu?</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</main>

<%- include('../includes/end.ejs') %>
</body>
</html>