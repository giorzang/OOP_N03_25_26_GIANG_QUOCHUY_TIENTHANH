<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container" style="margin-top: 100px;">
        <h2>Quản lý Phân loại</h2>

        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    
                    <% if (editing) { %>
                        <h4 class="mb-3">Chỉnh sửa Phân loại</h4>
                    <% } else { %>
                        <h4 class="mb-3">Thêm Phân loại mới</h4>
                    <% } %>

                    <form action="<% if (editing) { %>/admin/edit-category<% } else { %>/admin/add-category<% } %>" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên Phân loại</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<% if (editing) { %><%= category.name %><% } %>" required>
                        </div>

                        <% if (editing) { %>
                            <input type="hidden" name="categoryId" value="<%= category.id %>">
                        <% } %>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <% if (editing) { %>
                                    Cập nhật
                                <% } else { %>
                                    Thêm mới
                                <% } %>
                            </button>
                            <% if (editing) { %>
                                <a href="/admin/categories" class="btn btn-secondary">Hủy</a>
                            <% } %>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Tên Phân loại</th>
                                    <th scope="col">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (categories.length > 0) { %>
                                    <% for (let cat of categories) { %>
                                        <tr>
                                            <td><%= cat.id %></td>
                                            <td><%= cat.name %></td>
                                            <td>
                                                <a href="/admin/edit-category/<%= cat.id %>" class="btn btn-sm btn-warning me-2">Sửa</a>
                                                
                                                <form action="/admin/delete-category" method="POST" class="d-inline">
                                                    <input type="hidden" name="categoryId" value="<%= cat.id %>">
                                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="text-center">Chưa có phân loại nào.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>