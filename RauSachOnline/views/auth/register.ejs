<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<body class="custom-bg"> 
<main>
    <div class="container" style="max-width: 550px; margin-top: 50px; margin-bottom: 50px;"> 
        
        <div class="card p-4 custom-login-card">

            <div class="custom-login-header">
                <h2><i class="fas fa-user-plus me-2"></i> TẠO TÀI KHOẢN</h2> 
                <p class="text-muted">Vui lòng điền đầy đủ thông tin để trở thành khách hàng.</p>
            </div>

            <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %>
                </div>
            <% } %>

            <form action="/register" method="POST">
                
                <div class="mb-3">
                    <label for="name" class="form-label">Họ và Tên *</label>
                    <input type="text" class="form-control rounded-3" id="name" name="name" required>
                </div>
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email *</label>
                    <input type="email" class="form-control rounded-3" id="email" name="email" required>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại *</label>
                    <input type="tel" class="form-control rounded-3" id="phone" name="phone" required>
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">Địa chỉ</label>
                    <textarea class="form-control rounded-3" id="address" name="address" rows="2"></textarea>
                </div>

                <hr class="my-4">

                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu *</label>
                    <input type="password" class="form-control rounded-3" id="password" name="password" required>
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Xác nhận mật khẩu *</label>
                    <input type="password" class="form-control rounded-3" id="confirmPassword" name="confirmPassword" required>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-lg custom-btn-login">
                        <i class="fas fa-clipboard-check me-2"></i> Đăng ký
                    </button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p>Đã có tài khoản? <a href="/login" class="text-success fw-bold">Đăng nhập ngay</a></p>
            </div>
            
        </div>
    </div>
</main>
</body> 

<%- include('../includes/end.ejs') %>