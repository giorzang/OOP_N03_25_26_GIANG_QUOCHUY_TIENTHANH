<%- include('../includes/head.ejs') %>
<body class="custom-bg">
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container py-5">
        <h2 class="text-success fw-bold mb-4"><i class="fas fa-shopping-cart me-2"></i> GIỎ HÀNG CỦA BẠN</h2> 
        
        <% if (!products || products.length === 0) { %>
            <div class="alert alert-info text-center shadow-sm" role="alert" style="margin-top: 50px; padding: 30px;">
                <i class="fas fa-exclamation-circle me-2"></i> Giỏ hàng của bạn đang trống.
                <div class="mt-3">
                    <a href="/" class="btn btn-success custom-btn-add-cart">
                        <i class="fas fa-leaf me-2"></i> Mua sắm ngay!
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm border-0 rounded-3 overflow-hidden"> 
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 table-hover"> 
                                <thead class="cart-table"> <tr>
                                        <th scope="col" style="width: 40%;">Sản phẩm</th>
                                        <th scope="col" class="text-center" style="width: 15%;">Giá</th>
                                        <th scope="col" class="text-center" style="width: 15%;">Số lượng</th>
                                        <th scope="col" class="text-center" style="width: 20%;">Tổng</th>
                                        <th scope="col" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let p of products) { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= p.image_url %>" alt="<%= p.name %>" style="width: 60px; height: 60px; object-fit: cover; margin-right: 15px; border-radius: 8px;">
                                                    <strong class="product-title"><%= p.name %></strong>
                                                </div>
                                            </td>
                                            <td class="text-center text-danger fw-bold"><%= p.price.toLocaleString('vi-VN') %> VND</td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary"><%= p.quantity %></span>
                                            </td>
                                            <td class="text-center text-success fw-bold fs-6">
                                                <%= (p.price * p.quantity).toLocaleString('vi-VN') %> VND
                                            </td>
                                            <td class="text-center">
                                                <form action="/cart/delete-from-cart" method="POST">
                                                    <input type="hidden" name="productId" value="<%= p.id %>">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa sản phẩm">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm order-summary-card"> <div class="card-body">
                            <h5 class="card-title text-success fw-bold mb-4"><i class="fas fa-file-invoice-dollar me-2"></i> TÓM TẮT ĐƠN HÀNG</h5>
                            
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                    Tạm tính
                                    <strong><%= totalPrice.toLocaleString('vi-VN') %> VND</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                    Phí giao hàng
                                    <strong class="text-success">Miễn phí</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 border-top mt-2 pt-2">
                                    Tổng cộng
                                    <span class="fs-4 fw-bold text-success"><%= totalPrice.toLocaleString('vi-VN') %> VND</span>
                                </li>
                            </ul>
                            
                            <form action="/orders" method="POST" class="d-grid mt-4">
                                <button type="submit" class="btn btn-checkout">
                                    <i class="fas fa-truck me-2"></i> TIẾN HÀNH ĐẶT HÀNG
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>
</body> 