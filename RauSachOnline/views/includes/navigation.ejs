<header>
    <nav class="navbar navbar-expand-md main-nav fixed-top"> 
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-leaf me-2"></i> Rau Sạch Online
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="filter: brightness(0) invert(1);"></span> 
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">
                            <i class="fas fa-home me-1"></i> Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">
                            <i class="fas fa-shopping-cart me-1"></i> Giỏ hàng
                        </a>
                    </li>
                    <% if (isAuthenticated) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/orders">
                                <i class="fas fa-receipt me-1"></i> Đơn hàng
                            </a>
                        </li>
                    <% } %>
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-md-0 align-items-center">
                    <% if (isAuthenticated) { %>
                        <li class="nav-item me-3">
                            <a class="nav-link fw-bold" href="/profile">
                                <i class="fas fa-user-circle me-1"></i> Chào, <%= user.name %>
                            </a>
                        </li>

                        <li class="nav-item me-3">
                            <a class="nav-link" href="/admin/products">
                                <i class="fas fa-cog me-1"></i> Quản lý
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <form action="/logout" method="POST" class="d-flex">
                                <button class="btn btn-sm btn-logout" type="submit">
                                    <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                                </button>
                            </form>
                        </li>
                    <% } else { %>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/login">
                                <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-light text-success fw-bold" href="/register">
                                <i class="fas fa-user-plus me-1"></i> Đăng ký
                            </a>
                        </li>
                    <% } %>
                </ul>

            </div>
        </div>
    </nav>
</header>