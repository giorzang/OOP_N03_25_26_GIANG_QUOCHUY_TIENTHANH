<%- include('../includes/head.ejs') %>
<body class="custom-bg">
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container py-5">
        <h2 class="text-success fw-bold mb-5"><i class="fas fa-shopping-basket me-2"></i> GIỎ HÀNG CỦA BẠN</h2> 
        
        <% if (!products || products.length === 0) { %>
            <div class="alert alert-info text-center shadow-lg" role="alert" style="margin-top: 50px; padding: 30px;">
                <i class="fas fa-exclamation-circle me-2"></i> Giỏ hàng của bạn đang trống.
                <div class="mt-4">
                    <a href="/" class="btn btn-success custom-btn-add-cart btn-lg">
                        <i class="fas fa-leaf me-2"></i> Mua sắm ngay!
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card shadow-lg border-0 rounded-3"> 
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 table-hover cart-product-table"> 
                                <thead class="bg-light"> <tr>
                                        <th scope="col" style="width: 40%;">Sản phẩm</th>
                                        <th scope="col" class="text-center" style="width: 15%;">Giá</th>
                                        <th scope="col" class="text-center" style="width: 15%;">Số lượng</th>
                                        <th scope="col" class="text-center" style="width: 20%;">Tổng</th>
                                        <th scope="col" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let p of products) { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= p.image_url %>" alt="<%= p.name %>" style="width: 70px; height: 70px; object-fit: cover; margin-right: 15px; border-radius: 8px; border: 1px solid #eee;">
                                                    <strong class="product-title text-success"><%= p.name %></strong>
                                                </div>
                                            </td>
                                            <td class="text-center text-danger fw-bold"><%= parseFloat(p.price).toLocaleString('vi-VN') %> VND</td>
                                            <td class="text-center">
                                                <span class="badge bg-success fs-6"><%= p.quantity %></span>
                                            </td>
                                            <td class="text-center text-dark fw-bolder fs-5">
                                                <%= (parseFloat(p.price) * p.quantity).toLocaleString('vi-VN') %> VND
                                            </td>
                                            <td class="text-center">
                                                <form action="/cart/delete-from-cart" method="POST">
                                                    <input type="hidden" name="productId" value="<%= p.id %>">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa sản phẩm">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-lg order-summary-card border-success border-2"> 
                        <div class="card-body p-4">
                            <h5 class="card-title text-success fw-bolder mb-4 border-bottom pb-2"><i class="fas fa-file-invoice-dollar me-2"></i> TÓM TẮT ĐƠN HÀNG</h5>
                            
                            <ul class="list-group list-group-flush mb-4">
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 py-2">
                                    Tạm tính
                                    <strong><%= parseFloat(totalPrice).toLocaleString('vi-VN') %> VND</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 py-2">
                                    Phí giao hàng
                                    <strong class="text-success">Miễn phí</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 border-top mt-3 pt-3">
                                    Tổng cộng
                                    <span class="fs-4 fw-bolder text-danger"><%= parseFloat(totalPrice).toLocaleString('vi-VN') %> VND</span>
                                </li>
                            </ul>
                            
                            <form action="/orders" method="POST" class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg btn-checkout shadow-sm">
                                    <i class="fas fa-shipping-fast me-2"></i> TIẾN HÀNH ĐẶT HÀNG
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>