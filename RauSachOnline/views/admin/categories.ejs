<%- include('../includes/head.ejs') %>
<body class="custom-bg">
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container" style="margin-top: 50px; margin-bottom: 50px;">
        <h2 class="admin-page-title mb-4"><i class="fas fa-layer-group me-2 text-success"></i> Quản lý Phân loại</h2>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 p-4">
                    
                    <% if (editing) { %>
                        <h5 class="text-warning fw-bold mb-3"><i class="fas fa-edit me-1"></i> Chỉnh sửa Phân loại</h5>
                    <% } else { %>
                        <h5 class="text-success fw-bold mb-3"><i class="fas fa-plus-circle me-1"></i> Thêm Phân loại mới</h5>
                    <% } %>

                    <form action="<% if (editing) { %>/admin/edit-category<% } else { %>/admin/add-category<% } %>" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên Phân loại</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                    value="<% if (editing) { %><%= category.name %><% } %>" required>
                        </div>

                        <% if (editing) { %>
                            <input type="hidden" name="categoryId" value="<%= category.id %>">
                        <% } %>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-admin-primary">
                                <% if (editing) { %>
                                    <i class="fas fa-check-circle me-1"></i> Cập nhật
                                <% } else { %>
                                    <i class="fas fa-plus me-1"></i> Thêm mới
                                <% } %>
                            </button>
                            <% if (editing) { %>
                                <a href="/admin/categories" class="btn btn-secondary mt-2">Hủy</a>
                            <% } %>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-8">
                <% if (categories.length > 0) { %>
                    <div class="table-responsive shadow-sm rounded overflow-hidden">
                        <table class="table admin-table align-middle mb-0 table-hover">
                            <thead class="bg-success text-white">
                                <tr>
                                    <th scope="col" style="width: 10%;">ID</th>
                                    <th scope="col" style="width: 60%;">Tên Phân loại</th>
                                    <th scope="col" class="text-center" style="width: 30%;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let cat of categories) { %>
                                    <tr>
                                        <td><%= cat.id %></td>
                                        <td class="fw-bold text-dark"><%= cat.name %></td>
                                        <td class="text-center">
                                            <a href="/admin/edit-category/<%= cat.id %>" class="btn btn-action-edit btn-sm me-2">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            
                                            <form action="/admin/delete-category" method="POST" class="d-inline">
                                                <input type="hidden" name="categoryId" value="<%= cat.id %>">
                                                <button type="submit" class="btn btn-action-delete btn-sm">
                                                    <i class="fas fa-trash-alt"></i> Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info text-center" role="alert">
                        <i class="fas fa-info-circle me-2"></i> Chưa có phân loại nào.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>