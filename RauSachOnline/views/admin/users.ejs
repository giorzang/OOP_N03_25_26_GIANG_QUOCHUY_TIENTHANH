<%- include('../includes/head.ejs') %>
<body class="custom-bg"> 
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="container" style="margin-top: 50px; margin-bottom: 50px;">
        <h2 class="admin-page-title mb-4"><i class="fas fa-users-cog me-2 text-success"></i> Quản lý Người dùng</h2>
        
        <% if (users.length > 0) { %>
            <div class="table-responsive shadow-sm rounded overflow-hidden">
                <table class="table admin-table align-middle mb-0 table-hover">
                    <thead class="bg-success text-white"> 
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Họ tên</th>
                            <th scope="col">Email</th>
                            <th scope="col">Số điện thoại</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col" class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let u of users) { %>
                            <tr>
                                <td><%= u.id %></td>
                                <td class="fw-bold"><%= u.name %></td>
                                <td><%= u.email %></td>
                                <td><%= u.phone %></td> 
                                <td>
                                    <% if (u.isAdmin) { %>
                                            <span class="badge bg-success">Admin</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">User</span>
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <form action="/admin/toggle-admin" method="POST" class="d-inline me-2">
                                        <input type="hidden" name="userId" value="<%= u.id %>">
                                        <input type="hidden" name="currentIsAdmin" value="<%= u.isAdmin %>">                            
                                        <% if (u.isAdmin) { %>
                                            <button type="submit" class="btn btn-sm btn-warning">Xóa Admin</button>
                                        <% } else { %>
                                            <button type="submit" class="btn btn-sm btn-success">Thêm Admin</button>
                                        <% } %>
                                    </form>
                                    <form action="/admin/delete-user" method="POST" class="d-inline">
                                        <input type="hidden" name="userId" value="<%= u.id %>">
                                        <button type="submit" class="btn btn-action-delete btn-sm">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle me-2"></i> Không có người dùng nào.
            </div>
        <% } %>
    </div>
</main>

<div style="height: 100px;"></div>

<%- include('../includes/end.ejs') %>